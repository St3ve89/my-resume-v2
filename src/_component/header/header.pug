nav.header
  .header__top
    span.header__name Istvan Acs
    span.mr-menu(for="toogle-top-menu")
  .header__menu-list
    -
      var menuList = [
        {
        label: 'home',
        icon: 'home3',
        link: '#landing-page'
        },
        {
        label: 'about me',
        icon: 'smile',
        link: '#about-me'
        },
        {
        label: 'awards',
        icon: 'trophy',
        link: '#award'
        },
        {
        label: 'experience',
        icon: 'airplane',
        link: '#experience'
        },
        {
        label: 'what I can do',
        icon: 'hammer',
        link: '#what-can-i-do',
        }
      ]
  input(type="checkbox", id="toogle-top-menu")
  ul.header__menu-list
    each menu in menuList
      a.menu__link(href=menu.link)
        span(class=`mr-${menu.icon}`)
        span.menu__label=menu.label